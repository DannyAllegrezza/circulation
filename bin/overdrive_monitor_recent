#!/usr/bin/python
"""Monitor the Overdrive collection by going through the recently changed list."""
import os
import sys
bin_dir = os.path.split(__file__)[0]
package_dir = os.path.join(bin_dir, "..")
sys.path.append(os.path.abspath(package_dir))
from core.scripts import RunMonitorScript
from overdrive import RecentOverdriveCollectionMonitor
RunMonitorScript(RecentOverdriveCollectionMonitor).run()
